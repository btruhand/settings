{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unreachable": "error",
    "semi": ["error", "always"],
    "curly": "error",
    "no-alert": "error",
    "indent": ["error", 2, { 
      "VariableDeclarator": 2
    }],
    "no-unused-expressions": ["error", {
      "allowShortCircuit": false,
      "allowTernary": false
    }],
    "no-use-before-define": ["error", {
      "functions": false
    }]
  }
}
